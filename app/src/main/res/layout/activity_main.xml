<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- DrawerLayout must be child of LinearLayout -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="748dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <!-- MAIN CONTENT AREA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/content_main" />

            <LinearLayout
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone"> <!-- Initially hidden -->

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Search button -->
                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_search"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search"
                    android:padding="8dp" />

                <!-- Settings button -->
                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_settings"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Settings"
                    android:padding="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Big version button area -->
                <LinearLayout
                    android:id="@+id/btn_version"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/version_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="Version Icon"
                        android:src="@drawable/ic_version"/>

                    <TextView
                        android:id="@+id/version_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="KJV"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom navigation bar outside of DrawerLayout -->
            <LinearLayout
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:elevation="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="gone">



                <TextView
                    android:id="@+id/prev_chapter"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:text="@string/prev_chapter_arrow"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginStart="48dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/btn_chapter_title"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_weight="2"
                    android:text="@string/chapter_display"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/next_chapter"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:text="@string/next_chapter_arrow"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginEnd="48dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/clear_highlights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginEnd="32dp"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="?android:attr/windowBackground"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bible_drawer_list"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="8dp" />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>